{% trans_default_domain 'FOSUserBundle' %}
{% extends 'SEUserBundle::layout.html.twig' %}

{% block title %}
    Créer un compte - {{ parent() }}
{% endblock %}

{% block se_user %}
    <div class="well slogan-well">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="cat-title">Créer un compte</h3>
                    </div>
                </div>
            </div>
    </div>
        
    <div class="well se-well">
        <div class="index-container" >
            <div class="row">
                 <div id="content" class="col-md-12">
                     
                    <div class="col-md-6">
                        <h4 class="cat-title">Créer un compte</h4>

                        {% block fos_user_content %}
                            {% include "@FOSUser/Registration/register_content.html.twig" %}
                        {% endblock fos_user_content %}

                    </div>
                
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-4">
                        <h4 class="cat-title">Se connecter</h4>
                        <div class="form-group">
                            <a href="{{ path('fos_user_security_login') }}" class="form-control btn se-btn-action">
                                <i class="glyphicon glyphicon-chevron-left"></i>
                                Retour à la connexion
                            </a>
                        </div>

                        <h4 class="cat-title">Mot de passe oublié ?</h4>
                        <div class="form-group">
                            <a href="{{ path('fos_user_resetting_request') }}" class="form-control btn se-btn-action">
                                Réinitialiser le mot de passe
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}