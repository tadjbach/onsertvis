{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
    Liste des jobbers - {{ parent() }} - Service à domicile - Trouvez un jobber pour votre demande
{% endblock %}
{% block description %}
  <meta name="description" content="Trouvez un jobber ou un artisant près de chez vous" />
{% endblock %}

{% block layout_header2 %}

    <div class="row">
      <div id="header" class="col-md-12">
            <h3 class="cat-title">Liste des jobbers</h3>
            {{ include('@SEPlatform/User/listJobbeurFilter.html.twig') }}
      </div>
    </div>
{% endblock %}
{% block layout_body %}
<a class="btn btn-primary" href="{{ path('se_platform_advert_add') }}">Déposer une demande</a>
  {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <a href="{{ path('se_platform_user_edit') }}"  class="btn btn-primary">Mettre à jour mon compte</a>
  {% else %}
    <a href="{{ path('fos_user_registration_register') }}"  class="btn btn-primary">Créer un compte</a>
  {% endif %}

  <div class="row">
      <div class="col-md-12">
        <h4 class="cat-title">{{ titleResult }}</h4>
        {% for jober in listJobbeurs %}
        <div class="col-sm-4 jobber-view" onclick="window.document.location='{{ path('se_platform_user_view', {'userId': jober.id}) }}';">
            <div class="rating-block">
                <h4><i class="glyphicon glyphicon-user se-user-icon"></i> <span class="jobber">{{jober}}</span></h4>
                <h6>Membre depuis {{ jober.dateCreation|date('d/m/Y') }}</h6>
                <h6>
                  {{ jober.PostalCode.value }} {{ jober.PostalCode.city.labelNormal }}
                  ({{ jober.PostalCode.city.departement.labelNormal }})
                 </h6>
                {% if jober.rate != -1 %}
                    <h2 class="bold padding-bottom-7">{{jober.rate}} <small>/ 5</small></h2>
                    {{ include('@SEPlatform/User/rate2.html.twig', {'item': jober }) }}
                {% else %}
                    <h2 class="bold padding-bottom-7"><small>Pas encore noté</small></h2>
                    {{ include('@SEPlatform/User/rate2.html.twig', {'item': jober }) }}
                {% endif %}

            </div>
        </div>
         {% endfor %}
      </div>
    </div>

   <div class="row">
       <div class="col-md-12 text-center">
           <ul class="pagination">
               {% if nbPages > 1 %}
                   {% for p in range(1, nbPages) %}
                       <li{% if p == page %} class="active"{% endif %}>
                           <a href="{{ path('se_platform_user_jobbeur_list', {'page': p}) }}">{{ p }}</a>
                       </li>
                   {% endfor %}
               {% endif %}
           </ul>
       </div>
   </div>

{% endblock %}
