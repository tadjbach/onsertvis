{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
  {{title}} - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
  <div class="row">
    <div id="header" class="col-md-12">
        <h3 class="cat-title">{{title}}</h3>
    </div>
  </div>
{% endblock %}
{% block layout_body %}
  <div class="row">
       <div class="col-md-12">
         <div class="col-md-3"></div>
         <div class="col-md-6">
         {% for flash_message in app.session.flashBag.get('deleteSuccess') %}

               <div class="alert alert-success text-center" role="alert">
                   {{ flash_message }}
               </div>

         {% endfor %}
         {% for flash_message in app.session.flashBag.get('addSuccess') %}
             <div class="alert alert-success text-center" role="alert">
                 {{ flash_message }}
             </div>
         {% endfor %}
         {% for flash_message in app.session.flashBag.get('error') %}
             <div class="alert alert-danger text-center" role="alert">
                 {{ flash_message }}
             </div>
         {% endfor %}
       </div>
     <div class="col-md-3"></div>
        </div>

       </div>
{% endblock %}
