{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
  Supprimer la demande "{{advert.title}}" - {{advert.category.labelNormal}}
{% endblock %}
{% block description %}
  <meta name="description" content="Vous cherchez une autre aide, postez autant de demande que vous désirez et n'oubliez pas d'évaluer l'artisan" />
{% endblock %}

{% block layout_header2 %}
  <div class="row">
    <div id="header" class="col-md-12">
      <h3 class="cat-title">Supprimer la demande "{{advert.title}}"</h3>
    </div>
  </div>
{% endblock %}
{% block layout_body %}
  <div class="row">
       <div id="content" class="col-md-12">
         <div class="col-md-6">
              <p class="pad-msg">Etes-vous certain de vouloir supprimer la demande "{{ advert.title }}" ?</p>
              <div class="col-md-6">
                <a href="{{ path('se_platform_advert_user_list') }}" class="form-control btn btn-primary">
                    Retour à mes demandes
                </a>
              </div>
              <div class="col-md-6">
                  <form action="{{ path('se_platform_advert_delete', {'slug':advert.slug,  'id': advert.id}) }}" method="post">
                      <input type="submit" value="Supprimer" class="btn btn-danger" />
                      {{ form_rest(form) }}
                  </form>
              </div>
          </div>
       </div>
   </div>
{% endblock %}
