{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
    Annonces en cours - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
      <h3 class="cat-title">Annonces en cours</h3>
        {{ include('@SEPlatform/Advert/listFilter.html.twig') }}
      </div>
    </div>
{% endblock %}
{% block layout_body %}

         <h4 class="cat-title">{{ titleResult }}</h4>
            <table class="table table-hover" id="tblGrid">
                <tbody>
                {% for advert in advertList %}
                    <tr class="link" onclick="window.document.location='{{ path('se_platform_advert_view', {'slug': advert.slug,'id': advert.id}) }}';">
                        <td class="text-center" id="item_image">
                          <a class='se-tbl-link thumbnail' href="{{ path('se_platform_advert_view', {'slug': advert.slug,'id': advert.id}) }}">

                              {% if advert.image == null %}
                                <img class="se-auction-img" src="{{ asset(advert.WebPathNoImage) }}" alt="{{ asset(advert.WebPathNoImage) }}">
                              {% else %}
                                <img class="se-auction-img" src="{{ asset(advert.image.webPath) }}" alt="{{ asset(advert.image.webPath) }}">
                            {% endif %}
                          </a>
                        </td>
                        <td>
                            <h5 class="truncate">
                                <a class='se-tbl-link' href="{{ path('se_platform_advert_view', {'slug': advert.slug,'id': advert.id}) }}">{{ advert.title }}</a>
                                <h5>
                                  <i>{{ advert.category.labelNormal }} -  {{ advert.PostalCode.city.labelNormal }} ({{ advert.PostalCode.value }})</i>
                                </h5>
                                <h5 id="">
                                  {{ advert.dateCreation|date('d/m/Y') }}
                                  à
                                  {{ advert.dateCreation|date('H:i:s') }}
                                </h5>
                            </h5>
                        </td>
                        <td class="text-center">
                          {% if advert.auctionState == 0 %}
                              <h5><span class="label label-default">0 offre</span></h5>
                          {% else %}
                              <h5>
                                <span class="label label-success">
                                  {{ render(controller('SEPlatformBundle:Auction:getNbAuction', { 'advertId': advert.id })) }}
                                </span>
                              </h5>
                          {% endif %}
                        </td>
                        <td  class="text-right">
                          <div id="item_price" >
                            <span class="label se-price-badge little">
                              {% if advert.auctionState == 0 %}
                                -- €
                              {% else %}
                                {{ render(controller('SEPlatformBundle:Auction:getLastAuction', { 'advertId': advert.id })) }} / <span class="text-lowercase">{{advert.BudgetType.slug}}</span>
                              {% endif %}
                            </span>
                          </div>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>


   <div class="row">
      <div class="col-md-1"></div>
       <div class="col-md-10 text-center">
           <ul class="pagination">
               {% if nbPages > 1 %}
                   {% for p in range(1, nbPages) %}
                       <li{% if p == page %} class="active"{% endif %}>
                           <a href="{{ path('se_platform_advert_list', {'page': p}) }}">{{ p }}</a>
                       </li>
                   {% endfor %}
               {% endif %}
           </ul>
       </div>
       <div class="col-md-1"></div>
   </div>

{% endblock %}
