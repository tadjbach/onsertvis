{% extends 'SEPlatformBundle::viewLayout.html.twig' %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
      <h3 class="cat-title hidden-xs hidden-sm" >{{ advert.title }}</h3>
      <h3 class="cat-title visible-xs visible-sm" ><p class="trunc">{{ advert.title }}</p></h3>
  </div>
</div>
{% endblock %}
{% block layout_body %}
  <div class="row">
       <div class="col-md-12">
         {% if advert.getIsPublished == 0 %}
         <div class="text-center">
           <div class="col-md-12 alert alert-warning" role="alert">
             La demande est désactivée ou en cours de validation, <a class='se-tbl-link' href="{{ path('se_platform_advert_user_list') }}">Voir mes demandes</a>
           </div>
         </div>
         {% else %}
         <div class="text-center">
             <a class='btn btn-primary' href="{{ path('se_platform_auction_add', {'advertSlug': advert.slug,'advertId': advert.id}) }}">Voir la demande en tant que visiteur</a>
         </div>
        {% endif %}
        <h3 class="title-advert"><p class="trunc">{{ advert.title }}</p></h3>
        <div class="col-md-6">
            <blockquote>
              <h5>
                <i>Mise en ligne le <b>{{ advert.dateCreation|date('d/m/Y') }}</b> à <b>{{ advert.dateCreation|date('H:m') }}</b></i>
              </h5>
              <h5>{% if advert.category.labelNormal != 'Autres' %}
                      <i>Dans <b>{{ advert.category.labelNormal }}</b></i>
                  {% else %}
                      <b>Sans catégorie</b>
                  {% endif %}
              </h5>
              <h5>
                <i>Ville de </i><b>{{ advert.PostalCode.city.labelNormal }} ({{ advert.PostalCode.value }})</b></i>
              </h5>
          </blockquote>
          <blockquote>
            <h5>
              <i>Description : </i>
            </h5>
            <p>{{ advert.detail |nl2br }}</p>
          </blockquote>
        </div>
       </div>
    </div>
{% endblock %}
