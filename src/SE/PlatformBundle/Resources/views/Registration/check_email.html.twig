{% trans_default_domain 'FOSUserBundle' %}
{% extends 'SEPlatformBundle::layout.html.twig' %}

{% block title %}
    Vérification d'adresse mail pour activer mon compte
{% endblock %}
{% block description %}
  <meta name="description" content="Je propose mes services d'aides sur Service Enchhère, autombile, btp" />
{% endblock %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
    <h3 class="cat-title">Vérification d'adresse mail</h3>
  </div>
</div>
{% endblock %}

{% block layout_body %}

    <div class="row">
          <div class="col-md-12 text-center">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="alert alert-info" role="alert">
               {% block fos_user_content %}
                   <p>{{ 'registration.check_email'|trans({'%email%': user.email}) }}</p>
               {% endblock fos_user_content %}
                 </div>
                 <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary">
                     <i class="glyphicon glyphicon-chevron-left"></i>
                     Connexion
                 </a>
            </div>
            <div class="col-md-3">
            </div>
          </div>
    </div>

{% endblock %}
