{% trans_default_domain 'FOSUserBundle' %}
{% extends 'SEPlatformBundle::layout.html.twig' %}

{% block title %}
    Créer un compte - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
    <h3 class="cat-title">Créer un compte</h3>
  </div>
</div>
{% endblock %}

{% block layout_body %}

    <div class="row">
         <div class="col-md-12">

           {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
           <div class="col-md-3"></div>
           <div class="col-md-6">
                 <div class="alert alert-info text-center" role="alert">
                    <p>Vous êtes déjà connecté !!</p>
                    <p>Pour pouvoir créer un autre compte, <a href="{{path('fos_user_security_logout')}}">Déconnectez vous.</a></p>
                 </div>
             </div>
             <div class="col-md-3"></div>
          {% else %}

           <div class="col-md-1" ></div>
           <div class="col-md-4">
                <h4 class="cat-title">Créer un compte</h4>

                {% block fos_user_content %}
                    {% include "@FOSUser/Registration/register_content.html.twig" %}
                {% endblock fos_user_content %}

            </div>

            <div class="col-md-2" ></div>
            <div class="col-md-4">
                <h4 class="cat-title">Se connecter</h4>
                <div class="form-group">
                    <a href="{{ path('fos_user_security_login') }}" class="form-control btn se-btn-action">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                        Retour à la connexion
                    </a>
                </div>

                <h4 class="cat-title">Mot de passe oublié ?</h4>
                <div class="form-group">
                    <a href="{{ path('fos_user_resetting_request') }}" class="form-control btn se-btn-action">
                        Réinitialiser le mot de passe
                    </a>
                </div>
            </div>
            <div class="col-md-1" ></div>
              {% endif %}
        </div>
    </div>

{% endblock %}
