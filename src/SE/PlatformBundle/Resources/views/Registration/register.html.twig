{% trans_default_domain 'FOSUserBundle' %}
{% extends 'SEPlatformBundle::layout.html.twig' %}

{% block title %}
    Créer votre compte sur {{ parent() }} devenez jobber ou postez votre demande
{% endblock %}
{% block title %}
    Déposer une demande, un besoin ou un service - {{ parent() }}
{% endblock %}
{% block description %}
  <meta name="description" content="Inscrivez-vous sur Service Enchère si vous avez besoin d'un service (mécanique, btp, soins, ..) ou si vous souhaitez devenir un Jobber" />
{% endblock %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
    <h3 class="cat-title">Créer un compte</h3>
  </div>
</div>
{% endblock %}

{% block layout_body %}

    <div id="register" class="row">
         <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                   {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                     <div class="alert alert-info text-center" role="alert">
                        <p>Vous êtes déjà connecté !!</p>
                        <p>Pour pouvoir créer un autre compte, <a href="{{path('fos_user_security_logout')}}">déconnectez vous.</a></p>
                     </div>
                  {% else %}

                  {% block fos_user_content %}
                      {% include "@FOSUser/Registration/register_content.html.twig" %}
                  {% endblock fos_user_content %}

                  {% endif %}
              </div>
              <div class="col-md-3"></div>
        </div>
    </div>

{% endblock %}
