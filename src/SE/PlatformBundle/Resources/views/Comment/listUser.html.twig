{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
    Mes cmomentaires - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
    <h3 class="cat-title">Mes avis</h3>
    {{ include('@SEPlatform/Comment/listUserFilter.html.twig') }}
  </div>
</div>

{% endblock %}
{% block layout_body %}
  <div class="row">
       <div id="content" class="col-md-12">
         <h4 class="cat-title">{{countComment}} avis</h4>
              {% for comment in listComment %}
              <div class='col-md-12'>
                  <div class='panel panel-default'>
                      <div class='panel-heading se-panel-heading'>
                          <h4 class='panel-title text-left'>
                              {% if app.user == comment.receiver %}Avis reçu ({{ comment.sender }})
                              {% else %}
                                Avis laissé ({{ comment.receiver }})
                              {% endif %}
                          </h4>
                          <h4 class='panel-title text-right'><i>{{ comment.dateCreation|date('d/m/Y') }} à {{ comment.dateCreation|date('H:i:s') }}</i></h4>
                      </div>
                      <div class='panel-body'>
                          <div class="caption">
                            <p>  {{ include('@SEPlatform/User/rate.html.twig', {'item': comment }) }}</p>
                              <p>{{ comment.content |nl2br }}</p>
                                {% if app.user == comment.sender %}
                                     <div class='text-right'>
                                       <a href="{{ path('se_platform_comment_edit', {'id': comment.id}) }}"
                                       type="button"
                                       class='btn btn-success'
                                       title="Modifier">
                                       <i class='glyphicon glyphicon-edit'></i> Modifier
                                       </a>
                                       <a href="{{ path('se_platform_comment_delete', {'id': comment.id}) }}"
                                           type="button"
                                           class='btn btn-danger hide'
                                           title="Supprimer">
                                       <i class='glyphicon glyphicon-remove'></i> Supprimer
                                       </a>
                                     </div>
                               {% endif %}

                          </div>

                      </div>
                  </div>
              </div>

              {% else %}
                  <div>Pas d'avis</div>
              {% endfor %}
       </div>
   </div>

   <div class="row">
       <div class="col-md-12 text-center">
           <ul class="pagination">
               {% if nbPages > 1 %}
                   {% for p in range(1, nbPages) %}
                       <li{% if p == page %} class="active"{% endif %}>
                           <a href="{{ path('se_platform_comment_user_list', {'page': p}) }}">{{ p }}</a>
                       </li>
                   {% endfor %}
               {% endif %}
           </ul>
       </div>
   </div>
{% endblock %}
