{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
  {{advert.title}} - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
      <h5 class="cat-title hidden-xs hidden-sm" >
        <a href="{{ path('se_platform_homepage') }}" >
          Accueil
        </a>
          >
      <a href="{{ path('se_platform_advert_list') }}" >
        Toutes les demandes
      </a>
        >
        <a href="{{ path('se_platform_advert_list' , {'category' : advert.category.id }) }}" >
        {{advert.category.labelNormal}}
        </a>
        >
        {{ advert.title }}
    </h5>
    <h3 class="cat-title visible-xs visible-sm" ><p class="">{{ advert.title }}</p></h3>
  </div>
</div>
{% endblock %}
{% block layout_body %}
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
      {% for flash_message in app.session.flashBag.get('addSuccess') %}
          <div class="alert alert-success text-center" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              {{ flash_message }}
          </div>
      {% endfor %}
      {% for flash_message in app.session.flashBag.get('warning') %}
          <div class="alert alert-warning text-center" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              {{ flash_message }}
          </div>
      {% endfor %}
      {% for flash_message in app.session.flashBag.get('error') %}
          <div class="alert alert-danger text-center" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              {{ flash_message }}
          </div>
      {% endfor %}
  </div>
  <div class="col-md-2"></div>
</div>
  <div class="row">
       <div class="col-md-12">

       {% if is_granted("IS_AUTHENTICATED_REMEMBERED") and advert.user ==  app.user %}
           <div class="col-md-12 alert alert-warning" role="alert">
               Vous êtes proprétaire de la demande, <a class='se-tbl-link' href="{{ path('se_platform_advert_user_list') }}">Voir mes demandes</a>
           </div>
           {% endif %}

           <div class="row">
             <div class="col-sm-7">
               <div class="rating-block">
                         <h3 class="title-advert"><p class="">{{ advert.title }}</p></h3>

                         <p>Publiée le : {{ advert.dateCreation|date('d/m/Y') }} à {{ advert.dateCreation|date('H:m') }}</p>
                         <p>Catégorie : {{ advert.category.labelNormal }}</p>
                         <p>Ville : {{ advert.PostalCode.value }} {{ advert.PostalCode.city.labelNormal }} ({{ advert.PostalCode.city.departement.labelNormal }})</p>
                          <div class="form-group visible-xs visible-sm">
                             <a href="{{ path('se_platform_auction_add', {'advertSlug': advert.slug,'advertId': advert.id}) }}"
                             class="btn btn-default btn-md btn-block" >
                                 Faire une offre
                             </a>
                             <a href="{{ path('se_platform_message_add', {'advertSlug': advert.slug,'advertId': advert.id, 'receiveId': advert.user.id, 'isAnswer':0, 'msgId' : 0}) }}"
                             class="btn btn-default btn-md btn-block">
                                 Envoyer un message
                             </a>
                         <a type="button"
                              class="btn btn-success btn-md btn-block"
                              data-toggle="modal"
                              role="button"
                              data-toggle="modal"
                              data-target="#modalAuctionShow" >
                            Historique des offres
                         </a>
                         </div>
                         <div class="form-group hidden-xs hidden-sm">
                            <a href="{{ path('se_platform_auction_add', {'advertSlug': advert.slug,'advertId': advert.id}) }}"
                            class="btn btn-default btn-md" >
                                Faire une offre
                            </a>
                            <a href="{{ path('se_platform_message_add', {'advertSlug': advert.slug,'advertId': advert.id, 'receiveId': advert.user.id, 'isAnswer':0, 'msgId' : 0}) }}"
                            class="btn btn-default btn-md">
                                Envoyer un message
                            </a>
                        <a type="button"
                             class="btn btn-success btn-md"
                             data-toggle="modal"
                             role="button"
                             data-toggle="modal"
                             data-target="#modalAuctionShow" >
                           Historique des offres
                        </a>
                        </div>
               </div>
             </div>
              <div class="col-sm-5">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                   {% block view_advert_auction %}{% endblock %}
                {% else %}
                <div class="rating-block">
                  <h5 class="profil-title">Je n'ai pas de compte</h5>
                        <a href="{{ path('fos_user_registration_register') }}" role="button" class="btn btn-default btn-md btn-block">
                          Créer un compte
                        </a>
                      <h5 class="profil-title">J'ai un compte</h5>
                      <a class="btn btn-default btn-md btn-block" role="button" href="{{path('fos_user_security_login')}}" >
                          Se connecter
                      </a>
                      <a class="btn btn-primary btn-md btn-block" role="button" href="{{path('se_platform_advert_add')}}" >
                          Déposer une demande
                      </a>
                  </div>
                {% endif %}
              </div>
           </div>
          <hr>
            <div class="row">
              <div class="col-sm-7">
                 <div class="rating-block">
                   <h4 class="profil-title text-left">Description</h4>
                   <hr>
                   <p>{{ advert.detail |nl2br }}</p>
                 </div>
              </div>
                <div class="col-sm-5">
                    {{ include('@SEPlatform/User/userAdvertActivity.html.twig', {'user': advert.user }) }}
                </div>
            </div>

       </div>
    </div>
<hr>
<div class="row well">
      <h5 class="profil-title">Demandes similaires</h5>
      <hr>
      {% for advertSimilar in advertSimilarList|slice(0,3) %}
          <div class="col-md-4">
            <blockquote>
                <h5 class="truncate">
                  {% if  is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a class='se-tbl-link' href="{{ path('se_platform_auction_add', {'advertSlug': advertSimilar.slug,'advertId': advertSimilar.id}) }}">{{ advertSimilar.title }}</a>
                  {% else %}
                  <a class='se-tbl-link' href="{{ path('se_platform_advert_view', {'slug': advertSimilar.slug,'id': advertSimilar.id}) }}">{{ advertSimilar.title }}</a>
                  {% endif %}
                  <h5>
                  <p>Publiée le : {{ advertSimilar.dateCreation|date('d/m/Y') }} à {{ advertSimilar.dateCreation|date('H:m') }}</p>
                  <p>Catégorie : {{ advertSimilar.category.labelNormal }}</p>
                  <p>Ville : {{ advertSimilar.PostalCode.value }} {{ advertSimilar.PostalCode.city.labelNormal }} ({{ advertSimilar.PostalCode.city.departement.labelNormal }})</p>
                  <p>
                    {% if  is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                      <a href="{{ path('se_platform_auction_add', {'advertSlug': advertSimilar.slug,'advertId': advertSimilar.id}) }}" class="btn btn-primary" role="button">Voir</a>
                    {% else %}
                    <a href="{{ path('se_platform_advert_view', {'slug': advertSimilar.slug,'id': advertSimilar.id}) }}" class="btn btn-primary" role="button">Voir</a>
                      {% endif %}
                  </p>
                </blockquote>
          </div>
      {% else %}
       <div class="rating-block">
          <p>Aucune demande similaire pour l'instant !</p>
          <p><a href="{{ path('se_platform_advert_list')  }}" class="btn btn-primary" role="button">Toutes les demandes</a></p>
      </div>
      {% endfor %}
</div>
  <div class="row">
    <div class="col-md-12">
      <div class="modal fade"
           id="modalAuctionShow"
           tabindex="-1"
           role="dialog"
           aria-labelledby="modalAuctionShowLabel">
              <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel">Historique des offres</h4>
                </div>
                <div class="modal-body text-center">
                  {{ render(controller('SEPlatformBundle:Auction:list', { 'advertId': advert.id })) }}
                </div>
              </div>
            </div>
      </div>
    </div>
  </div>
{% endblock %}
