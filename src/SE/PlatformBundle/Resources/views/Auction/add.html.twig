{% extends 'SEPlatformBundle::viewLayout.html.twig' %}

{% block view_advert_auction %}
   <div class="col-md-12 text-center">
          <div class="alert alert-danger" role="alert">
                <strong>Attention!</strong> Je propose mon offre pour "<b>{{advert.BudgetType.labelNormal}}</b>"
          </div>
            {{ include('SEPlatformBundle:Auction:form.html.twig') }}
            <a href="{{ path('se_platform_message_add', {'advertSlug': advert.slug,'advertId': advert.id, 'receiveId': advert.user.id, 'isAnswer':0}) }}"
            class="btn btn-default btn-md btn-block">
                Contacter
            </a>
            <button
                 type="button"
                 class="btn btn-default btn-md btn-block"
                 data-toggle="modal"
                 role="button"
                 data-toggle="modal"
                 data-target="#modalAuctionShow"
                 >
               {{ render(controller('SEPlatformBundle:Auction:getNbAuction', { 'advertId': advert.id })) }}
            </button>
   </div>
        {% endblock %}
