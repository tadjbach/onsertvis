{% extends 'SEPlatformBundle::viewLayout.html.twig' %}

{% block view_advert_auction %}
<div class="rating-block">
     {% if app.user.isAcountComplete == 0 %}
         <div class="alert alert-warning" role="alert">
             Pour pouvoir proposer une offre, merci de compléter votre profil, <a class="alert-link" href="{{ path('fos_user_profile_edit') }}" >compléter</a>
         </div>
     {% else %}

      <div class="alert alert-danger" role="alert">
            <strong>Attention!</strong>
            <p> Je propose mon offre pour "<b>{{advert.BudgetType.labelNormal}}</b>" </p>
      </div>
      {{ include('SEPlatformBundle:Auction:form.html.twig') }}
      <hr>
      <div class="form-group">
         <a href="{{ path('se_platform_message_add', {'advertSlug': advert.slug,'advertId': advert.id, 'receiveId': advert.user.id, 'isAnswer':0, 'msgId' : 0}) }}"
         class="btn btn-default btn-md btn-block">
             Envoyer un message
         </a>
     </div>
         {% endif %}
  </div>
{% endblock %}
