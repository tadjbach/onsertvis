{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
  Envoyer un message - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
    <h3 class="cat-title">Envoyer un message</h3>
  </div>
</div>
{% endblock %}

{% block layout_body %}
  <div class="row">
       <div id="content" class="col-md-12">
         {% if app.user.isAcountComplete == 0 %}
               <div class="alert alert-danger" role="alert">
                   Bonjour {{ app.user.username }}, Votre profil n'est pas complet, merci de le
                   <a class="alert-link" href="{{ path('fos_user_profile_edit') }}" >compléter</a>
               </div>
         {% else %}
         <div class="col-md-6">
           <div class="panel panel-default">
             <i class="ad-date">Mise en ligne le {{ advert.dateCreation|date('d/m/Y') }} à {{ advert.dateCreation|date('H:m') }}</i>
                <div class="panel-body text-center se-item-link">
                 {% if advert.category.labelNormal != 'Autres' %}
                     <p>{{ advert.category.labelNormal }}</p>
                 {% else %}
                     <p>Sans catégorie</p>
                 {% endif %}
                     <img class="se-img" src="{{ asset(advert.image.webPath) }}" alt="{{ asset(advert.image.webPath) }}">
                </div>
                <div class="panel-footer se-panel-footer">
                   <h4 class="truncate">
                     {{ advert.title }}
                   </h4>
                   <p>{{ advert.user.PostalCode.value }} {{ advert.user.PostalCode.city.labelNormal }}
                     ({{ advert.user.PostalCode.city.departement.labelNormal }} -
                     {{ advert.user.PostalCode.city.departement.region.labelNormal }})
                   </p>
                </div>
            </div>
         </div>
         <div class="col-md-6">
             {{ include('SEPlatformBundle:Message:form.html.twig') }}
         </div>
         {% endif %}

       </div>
   </div>
{% endblock %}
