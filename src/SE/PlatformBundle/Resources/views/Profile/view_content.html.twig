{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
  <div class="col-md-8">
        <blockquote>
          <h5>{{user}}</h5>
          <h5>
             {% if user.isAcountComplete == 1 %}
                {{ user.PostalCode.value }} {{ user.PostalCode.city.labelNormal }}
                ({{ user.PostalCode.city.departement.labelNormal }})
              {% endif %}
          </h5>
          {% if user.isDetailVisible or is_granted('ROLE_SUPER_ADMIN')%}
              <h5>
                <i class="glyphicon glyphicon-phone-alt"></i> {{ user.phoneNumber|split('', 2)|join(' ') }}
              </h5>
          {% endif %}
            </blockquote>
          <blockquote>
          <h5><i><b>Note : </b></i>{{ include('@SEPlatform/User/rate.html.twig', {'item': user }) }}</h5>
          <h5><i><b>Membre depuis </b></i>: {{ user.dateCreation|date('d/m/Y') }}</h5>
          <h5>
            <i><b>A propos :</b></i>
          </h5>
          <h5>
           {% if user.isAcountComplete == 1 %}
                {% if user.detail %}
                   {{ user.detail|nl2br }}
                    {% else %}
                      {{user}} n'a pas rensigné cette partie.
                    {% endif %}
              {% endif %}
          </h5>
        </blockquote>
        <blockquote>

          <h5>
             {% if user.isAcountComplete == 1 %}
            <i><b>Disponibilité : </b></i>
                  {% if user.calendar|length > 6 %}
                  <b>Tous les jours</b>
                 {% else %}
                     {% for day in user.calendar %}
                         <span class="advert-calendar">{{ day.dayFrAbbr  }}</span>
                     {% else %}
                       <span>Me contacter</span>
                       {% endfor %}
                  {% endif %}
              {% endif %}
          </h5>
          <h5>
        {% if user.isAcountComplete == 1 %}
            <i><b>Mode de paiement accepté : </b></i>
               {% for pay in user.payment %}
                   <span class="advert-calendar">{{ pay.labelNormal  }}</span>
               {% else %}
                 <span>Me contacter</span>
                 {% endfor %}
            {% endif %}
          </h5>

        </blockquote>

  </div>
  <div class="col-md-4">
    <blockquote>
            <h5><span class="label label-info">{{countReceivedAuction}}</span> <span class="mar-lef-10">Offres reçues</span></h5>
            <h5><span class="label label-warning">{{ countProposedAuction }}</span> <span class="mar-lef-10">Offres proposées</span></h5>
            <h5><span class="label label-success">{{countAcceptedAuction}}</span> <span class="mar-lef-10">Offres gagnées</span></h5>
            <h5><span class="label label-danger">{{countLosedAuction}}</span> <span class="mar-lef-10">Offres perdues</span></h5>
    </blockquote>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
      <blockquote>
        Avis reçues ({{ listComment|length }})
      </blockquote>
        {% for comment in listComment %}
        <div  class="well" >
          <div class="row">
            <div class="col-md-12">
              <div class="col-md-4 text-center">
                <h4>
                  <a class='cat-link'
                  href="{{ path('se_platform_user_view', {'userId': comment.sender.id}) }}" class="cat-link" >
                                              {{ comment.sender }}
                                          </a>
                  </h4>
                <h4><small>le {{ comment.dateCreation|date('d/m/Y') }}</small></h4>
                <h5>Note : <span class="label label-default se-badge">{{ comment.rate }} / 5</span></h5>
              </div>
              <div class="col-md-8">
                <h4>{{ comment.advert.title }}</h4>
                <h5>{{ comment.content |nl2br }}</h5>
              </div>
            </div>
            </div>
        </div>
          {% endfor %}
  </div>
</div>
