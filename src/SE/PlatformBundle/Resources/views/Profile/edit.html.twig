{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
    Mon compte - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
  <div class="row">
    <div id="header" class="col-md-12">
      <h3 class="cat-title">Modifier mon compte</h3>
    </div>
  </div>
{% endblock %}

{% block layout_body %}

<div class="col-md-12 text-center">
      <div class="col-md-3"></div>
      <div class="col-md-6">
          {% for flash_message in app.session.flashBag.get('updateSuccess') %}
              <div class="alert alert-success text-center" role="alert">
                  {{ flash_message }}
              </div>
          {% endfor %}
          {% for flash_message in app.session.flashBag.get('updateError') %}
              <div class="alert alert-danger text-center" role="alert">
                  {{ flash_message }}
              </div>
          {% endfor %}
        </div>
        <div class="col-md-3"></div>
</div>

    <div class="row">

            {% block fos_user_content %}
            {% if app.user.isAcountComplete == 0 %}
            <div class="col-md-3"></div>
               <div class="col-md-6">
                  <div class="alert alert-warning" role="alert">
                      Bonjour {{ app.user.username }}, Votre profil n'est pas complet, merci de le
                      compl√©ter
                  </div>
                </div>
                <div class="col-md-3"></div>
              {% endif %}
              <div class="col-md-12">
                {% include "@FOSUser/Profile/edit_content.html.twig" %}
                </div>
            {% endblock fos_user_content %}

    </div>

{% endblock %}
