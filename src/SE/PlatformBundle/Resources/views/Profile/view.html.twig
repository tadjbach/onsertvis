{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
    Profil de {{user}} - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
    <h3 class="cat-title">Profil de {{user}}</h3>
{% endblock %}

{% block layout_body %}

      {% if user.isAcountComplete == 0 %}
            <div class="col-md-3"></div>
            <div class="col-md-6">
              <div class="alert alert-danger" role="alert">
                  Le profil de {{user}} n'est pas complet.
              </div>
            </div>
            <div class="col-md-3"></div>
      {% else %}
      {% block fos_user_content %}
          {% include "@FOSUser/Profile/view_content.html.twig" %}
      {% endblock fos_user_content %}
      {% endif %}

{% endblock %}
