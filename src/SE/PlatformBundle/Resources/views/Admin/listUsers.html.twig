{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
    Liste des utilisateurs - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
  <div class="row">
    <div id="header" class="col-md-12">
      <h3 class="cat-title">Liste des utilisateurs</h3>
        {{ include('@SEPlatform/Admin/listUserFilter.html.twig') }}
    </div>
  </div>
{% endblock %}
{% block layout_body %}
  <div class="row">
       <div id="content" class="col-md-12">
         <h4 class="cat-title">{{ titleResult }}</h4>
            <table class="table" id="tblGrid">
              <thead id="tblHead">
                  <tr>
                      <th>Identifiant</th>
                      <th>Utilisateur</th>
                      <th>Email</th>
                      <th>Roles</th>
                      <th>Date de création</th>
                      <th>Activé</th>
                      <th>Complet</th>

                  </tr>
              </thead>
                <tbody>
                {% for user in listUsers %}
                    <tr>
                      <td>
                         {{user.id}}
                     </td>
                         <td>
                            <a href="{{ path('se_platform_admin_view_user' , {'id' : user.id }) }}" >
                              {{user}}
                            </a>
                        </td>
                        <td>
                           {{user.email}}
                       </td>
                       <td>
                              {{ user.roles[0] }}

                      </td>
                        <td>
                          {{ user.dateCreation|date('d/m/Y') }}
                          à
                          {{ user.dateCreation|date('H:i:s') }}
                       </td>
                       <td>
                          {% if user.enabled %}
                            <span class="label label-success">Oui</span>
                          {% else %}
                            <span class="label label-danger">Non</span>
                          {% endif %}
                      </td>
                      <td>
                         {% if user.isAcountComplete %}
                           <span class="label label-success">Oui</span>
                         {% else %}
                           <span class="label label-danger">Non</span>
                         {% endif %}
                     </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
       </div>
   </div>

   <div class="row">
       <div class="col-md-12 text-center">
           <ul class="pagination">
               {% if nbPages > 1 %}
                   {% for p in range(1, nbPages) %}
                       <li{% if p == page %} class="active"{% endif %}>
                           <a href="{{ path('se_platform_admin_list_users', {'page': p}) }}">{{ p }}</a>
                       </li>
                   {% endfor %}
               {% endif %}
           </ul>
       </div>
   </div>

{% endblock %}
