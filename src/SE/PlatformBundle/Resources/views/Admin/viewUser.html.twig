{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
    Détail d'un compte utilisateur - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
    <h3 class="cat-title-admin">Compte N° {{ user.id }} de {{ user }}</h3>
  </div>
</div>
{% endblock %}

{% block layout_body %}

  <div class="row">

    <div class="well se-well">
              <div class="index-container" >
                  <div class="row">
                       <div id="content" class="col-md-12">
                          <div class="">
                              <h4 class="">
                                {{ user }}
                              </h4>
                              <br>
                              <div class="row">
                                    <div class="col-md-4">

                                        <i class="glyphicon glyphicon-map-marker"></i>
                                        <span class="se-profile-title">Adresse : </span>
                                        <p class="se-profile-value"> {{ user.address }}
                                            <br>{{ user.PostalCode.value }} {{ user.PostalCode.city.labelNormal }}
                                            <br>{{ user.PostalCode.city.departement.labelNormal }}</p>
                                        <br>
                                      <i class="glyphicon glyphicon-phone-alt"></i>
                                        <span class="se-profile-title">Téléphone : </span>
                                        <p class="se-profile-value"> {{ user.phoneNumber|join('|') }}</p>

                                        <br>
                                        <i class="glyphicon glyphicon-calendar"></i>
                                          <span class="se-profile-title">Disponibilité : </span>
                                          <div class="se-profile-value">
                                              <table>
                                              <thead id="tblHead">
                                                  <tr>
                                                      {% for day in user.calendar %}
                                                      <th>
                                                          {{ day.dayFr  }}
                                                      </th>
                                                      {%else%}
                                                          <th>
                                                          Nous contacter
                                                          </th>
                                                      {% endfor %}
                                                  </tr>
                                              </thead>
                                              <tbody>
                                                  {% for day in user.calendar %}
                                                      <td>

                                                      </td>
                                                      {% endfor %}
                                              </tbody>
                                              </table>

                                          </div>
                                    </div>
                                  <div class="col-md-4">
                                      <i class="glyphicon glyphicon-info-sign"></i>
                                      <span class="se-profile-title">A propos : </span>
                                      <p class="se-profile-value"> {{ user.detail|nl2br }}</p>
                                  </div>
                                  <div class="col-md-4">

                                  </div>
                                </div>
                          </div>
                      </div>
                  </div>


                  <div class="row">
                    <div class="col-md-12">
                      <div class="col-md-6">
                           <h4 class="cat-title">Action </h4>
                           <table class="table" id="tblGrid">
                             <tbody>
                               <tr>
                                 <td>
                                     Activée
                                 </td>
                                 {% if user.isEnabled %}
                                 <td>
                                     <span class="label label-success">Oui</span>
                                 </td>
                                 <td class="text-center">
                                   <a href="{{ path('se_platform_admin_enabled_user', {'action': 0,'id': user.id}) }}" class="btn se-btn-action">Désactiver</a>
                                 </td>
                                 {% else %}
                                 <td>
                                     <span class="label label-danger">Non</span>
                                 </td>
                                 <td class="text-center">
                                   <a href="{{ path('se_platform_admin_enabled_user', {'action': 1,'id': user.id}) }}" class="btn se-btn-action">Activer</a>
                                 </td>
                                 {% endif %}
                               </tr>

                               <tr>
                                 <td>
                                     Newletter
                                 </td>
                                 {% if user.isNewsLetter %}
                                 <td>
                                     <span class="label label-success">Oui</span>
                                 </td>
                                 <td class="text-center">
                                   <a href="{{ path('se_platform_admin_newsletter_user', {'action': 0,'id': user.id}) }}" class="btn se-btn-action">Désactiver</a>
                                 </td>
                                 {% else %}
                                 <td>
                                     <span class="label label-danger">Non</span>
                                 </td>
                                 <td class="text-center">
                                   <a href="{{ path('se_platform_admin_newsletter_user', {'action': 1,'id': user.id}) }}" class="btn se-btn-action">Activer</a>
                                 </td>
                                 {% endif %}
                               </tr>

                               <tr>
                                 <td>
                                     Visible
                                 </td>
                                 {% if user.isDetailVisible %}
                                 <td>
                                     <span class="label label-success">Oui</span>
                                 </td>
                                 <td class="text-center">
                                   <a href="{{ path('se_platform_admin_visible_user', {'action': 0,'id': user.id}) }}" class="btn se-btn-action">Désactiver</a>
                                 </td>
                                 {% else %}
                                 <td>
                                     <span class="label label-danger">Non</span>
                                 </td>
                                 <td class="text-center">
                                   <a href="{{ path('se_platform_admin_visible_user', {'action': 1,'id': user.id}) }}" class="btn se-btn-action">Activer</a>
                                 </td>
                                 {% endif %}
                               </tr>

                               <tr>
                                 <td>
                                    Note
                                 </td>
                                 <td>
                                     {{ include('@SEPlatform/User/rate.html.twig', {'item': user }) }}
                                 </td>
                               </tr>
                             </tbody>
                           </table>
                       </div>

                    </div>
                  </div>

              </div>
          </div>


  </div>

{% endblock %}
