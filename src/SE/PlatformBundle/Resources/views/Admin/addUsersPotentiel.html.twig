{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
    Créer un compte d'un utilisateur potentiel
{% endblock %}
{% block description %}

{% endblock %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
      <h3 class="cat-title">Créer un compte d'un utilisateur potentiel</h3>
  </div>
</div>
{% endblock %}
{% block layout_body %}
<div class="row">
<div class="col-md-2"></div>
  <div class="col-md-8">
      {% for flash_message in app.session.flashBag.get('success') %}
          <div class="alert alert-success text-center" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              {{ flash_message }}
          </div>
      {% endfor %}
      {% for flash_message in app.session.flashBag.get('info') %}
          <div class="alert alert-info text-center" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              {{ flash_message }}
          </div>
      {% endfor %}
      {% for flash_message in app.session.flashBag.get('error') %}
          <div class="alert alert-danger text-center" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              {{ flash_message }}
          </div>
      {% endfor %}
  </div>
  <div class="col-md-2"></div>
</div>
  <div class="row">
    <div class="col-md-3"></div>
       <div class="col-md-6">
               {{ include('SEPlatformBundle:Admin:formUsersPotentiel.html.twig') }}
       </div>
       <div class="col-md-3"></div>
 </div>
{% endblock %}
