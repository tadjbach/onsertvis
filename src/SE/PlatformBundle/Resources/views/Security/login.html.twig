{% trans_default_domain 'FOSUserBundle' %}
{% extends "SEPlatformBundle::layout.html.twig" %}

{% block title %}
  Se connecter - {{ parent() }}
{% endblock %}

{% block layout_header2 %}
<div class="row">
  <div id="header" class="col-md-12">
    <h3 class="cat-title">Se connecter</h3>
  </div>
</div>
{% endblock %}
{% block layout_body %}

    <div class="row">
         <div class="col-md-12">
           <div class="col-md-1" ></div>
           <div class="col-md-4">
                <h4 class="cat-title">Se connecter</h4>
                    {# On définit ce block, dans lequel vont venir s'insérer les autres vues du bundle #}
                        {% block fos_user_content %}
                            {{ include('@FOSUser/Security/login_content.html.twig') }}
                        {% endblock fos_user_content %}
                </div>
                <div class="col-md-2" ></div>
                <div class="col-md-4">
                    <h4 class="cat-title">Vous n'avez pas de compte ?</h4>
                    <div class="form-group">
                        <a href="{{ path('fos_user_registration_register') }}" class="form-control btn se-btn-action">
                            Créer un compte
                        </a>
                    </div>
                    <h4 class="cat-title">Mot de passe oublié ?</h4>
                    <div class="form-group">
                        <a href="{{ path('fos_user_resetting_request') }}" class="form-control btn se-btn-action">
                            Réinitialiser le mot de passe
                        </a>
                    </div>
                </div>
                <div class="col-md-1" ></div>
         </div>
     </div>
{% endblock %}
