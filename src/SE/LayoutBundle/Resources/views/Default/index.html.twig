{% extends "SELayoutBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Trouvez le bon service au bon prix
{% endblock %}

{% block se_layout_body %}

<div class="well slogan-well">
    
    <div class="slogan"><p>Trouvez le bon service au bon prix !</p></div>
    <br>
    <div class="panel-body">

            <div class="col-md-6">
                <h3 class="cat-title">Vous cherchez une aide ?</h3>

                <h4>
                    <span class="label label-default se-badge">1</span> 
                    <a class="slogan-link" href="{{ path('se_auction_advert_add') }}">Postez votre demande</a>
                </h4>
                <h4><span class="label label-default se-badge">2</span> Recevez des enchères</h4>
                <h4><span class="label label-default se-badge">3</span> Choisissez le meilleur enchérisseur</h4>
            </div>
            <div class="col-md-6">
                <h3 class="cat-title">Vous proposez vos services ?</h3>

                <h4>
                    <span class="label label-default se-badge">1</span> 
                    <a class="slogan-link" href="{{ path('fos_user_registration_register') }}">Inscrivez vous</a>
                </h4>
                <h4><span class="label label-default se-badge">2</span> Passez des enchères et gagnez</h4>
                <h4><span class="label label-default se-badge">3</span> Retrouver le demandeur</h4>
            </div>
    </div>
</div>

<!-- CATGEORY - CARTE DE FRANCE -->
<div class="well se-well">
    <div class="index-container" >
        <div class="row">
            <div class="col-md-4">
                <h4 class="cat-title">Par Catégories</h4>
                <ul class="ul-cat">
                    {% for category in listCategory %}
                        <li>
                            <a class="cat-link" href="{{ path('se_auction_advert_list' , {'category' : category.id }) }}">
                                {{ category.labelNormal }} 
                            </a>
                        </li>
                    {% endfor %}
                </ul>
                <div class="seprate-white"></div>
                <h4 class="cat-title">Par Régions</h4>
                <ul class="ul-cat">
                    {% for region in listRegion %}
                        <li>
                            <a class="cat-link" href="{{ path('se_auction_advert_list', { 'region': region.id }) }}">
                                {{ region.labelNormal }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-8 text-center">
                <div id="cmap"></div>
            </div>
        </div>
    </div>
</div>
{% endblock %}