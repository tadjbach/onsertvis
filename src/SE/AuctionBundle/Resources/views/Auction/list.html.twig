{% extends "SELayoutBundle::layout.html.twig" %}

{% block title %}
    Mes offres - {{ parent() }}
{% endblock %}

{% block se_layout_body %}
    
    <div class="well slogan-well">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="cat-title">Enchères reçues pour la demande "{{ advert.title }}"</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="well se-well">
        <div class="index-container" >
            <div class="row">
                 <div id="content" class="col-md-12">
                     <h4 class="cat-title">{{countAuctions}} offre(s)</h4>
                     {{ include('@SEAuction/Auction/listAuction.html.twig') }}
                 </div>
            </div>
        </div>
    </div>
    {{ include('@SEAuction/Commun/pagination.html.twig') }}
