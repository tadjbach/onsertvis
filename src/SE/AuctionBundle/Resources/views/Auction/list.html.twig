{# Afficher les enchère - Action #}

{% extends "SELayoutBundle::layout.html.twig" %}

{% block title %}
    Mes enchères - {{ parent() }}
{% endblock %}

{% block se_layout_body %}
 
<div class="row">
    <div class="col-md-12 thumbnail nocadre">
        <div class="row">
            <div id="menu" class="col-md-12">
                <h4 class="cat-title">Filter les résultats</h4>

                <a href="{{ path('se_auction_auction_list_by_user') }}"
                   class="btn btn-primary"
                   role="button" >
                    Toutes les enchères
                </a>

                <a href="{{ path('se_auction_auction_list_by_user_proposed') }}"
                   class="btn btn-warning"
                   role="button" >
                    Enchères proposées
                </a>

                <a href="{{ path('se_auction_auction_list_by_user_receive') }}"
                   class="btn btn-danger"
                   role="button" >
                    Enchères reçues
                </a>

                <a href="{{ path('se_auction_auction_list_by_user_terminated') }}"
                   class="btn btn-success"
                   role="button" >
                    Enchères terminées
                </a>



            </div>
        </div>
        <h4 class="cat-title">{{countAuctions}} Enchères</h4>
        <div class="row">
            <div id="content" class="col-md-12">
                {{ include('@SEAuction/Auction/listAuction.html.twig') }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <ul class="pagination">
                    {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
                    {% for p in range(1, nbPages) %}
                        <li{% if p == page %} class="active"{% endif %}>
                            <a href="{{ path('se_auction_auction_list_by_user', {'page': p}) }}">{{ p }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
