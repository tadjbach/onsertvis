{# Liste les enchères - Sans Action #}

{% if countAuctions > 0 %}
    <table class="table" id="tblGrid">
        <thead id="tblHead">
        <tr>
            <th>Demande</th>
            <th>Enchérisseur</th>
            <th>Note</th>
            <th class="text-center">Montant</th>
            <th class="text-center">Date</th>
            <th class="text-center">Mon choix</th>
        </tr>
        </thead>
        <tbody>
        {% for auction in listAuctions %}
            <tr>
                <td class="text-left">
                    <a href="{{ path('se_auction_advert_view', {'id': auction.advert.id}) }}" class="cat-link" >
                        {{ auction.advert.title }}
                    </a>

                </td>
                <td class="text-left">
                    <a href="{{ path('se_user_view', {'id': auction.user.id}) }}" class="cat-link" >
                        {{ auction.user }}
                    </a>
                </td>
                <td class="text-left">
                    {{ include('@SEAuction/Auction/rate.html.twig', {'user': auction.user }) }}
                </td>
                <td class="text-right bold">{{ auction.value|number_format(0, ' ', ' ') }} €</td>
                <td class="text-right">{{ auction.dateCreation|date('d/m/Y') }} à {{ auction.dateCreation|date('H:m:s') }}</td>
                    <td class="text-center">
                        {% if auction.state == 1 %}
                        <a href="{{ path('se_auction_auction_accept', {'auctionId': auction.id}) }}"
                           type="button" class="btn btn-primary" >
                            <i class="glyphicon glyphicon-thumbs-up" ></i>
                        </a>
                        {% elseif auction.state == 2%}
                        <button 
                           class="btn btn-primary"
                                        data-toggle="modal"
                                        data-target="#modalCommentAdd">
                            <i class="glyphicon glyphicon-comment" ></i>
                            Evaluer
                        </button>
                        <a href="#"
                           type="button" class="btn btn-success" >
                            <i class="glyphicon glyphicon-ok" ></i>
                            Accepter
                        </a>
                        {% elseif auction.state == 3 %}
                        <a href="#"
                           type="button" class="btn btn-danger" >
                            <i class="glyphicon glyphicon-ok" ></i>
                        </a>
                        
                        {% endif %}
                    </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <div>Aucune enchère pour l'instant</div>
{% endif %}

<div class="modal fade"
    id="modalCommentAdd"
    tabindex="-1"
    role="dialog"
    aria-labelledby="modalCommentAddLabel">
    {{ render(controller('SEAuctionBundle:Comment:add', {'request': app.request,'advertId': 4} )) }}
</div>