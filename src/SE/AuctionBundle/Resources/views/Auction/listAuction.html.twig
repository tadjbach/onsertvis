{# Liste les enchères - Sans Action #}

{% if countAuctions > 0 %}
    <table class="table" id="tblGrid">
        <thead id="tblHead">
        <tr>
            <th>Demande</th>
            <th>Enchérisseur</th>
            <th>Note</th>
            <th class="text-center">Montant</th>
            <th class="text-center">Date</th>
            <th class="text-center">Mon choix</th>
        </tr>
        </thead>
        <tbody>
        {% for auction in listAuctions %}
            <tr>
                <td class="text-left">
                    <a href="{{ path('se_auction_advert_view', {'id': auction.advert.id}) }}" class="cat-link" >
                        {{ auction.advert.title }}
                    </a>

                </td>
                <td class="text-left">
                    <a href="{{ path('se_user_view', {'id': auction.user.id}) }}" class="cat-link" >
                        {{ auction.user }}
                    </a>
                </td>
                <td class="text-left">
                    {% if auction.user.rate == -1 or auction.user.rate == null or auction.user.rate == 0 %}
                        {% for i in 1..5 %}
                            <i class="glyphicon glyphicon-star-empty"></i>
                        {% endfor %}
                    {% elseif auction.user.rate == 1 %}
                        <i class="glyphicon glyphicon-star rate-success"></i>
                        {% for i in 1..5 - auction.user.rate %}
                            <i class="glyphicon glyphicon-star-empty"></i>
                        {% endfor %}
                    {% elseif auction.user.rate == 2 %}
                        {% for i in 1..auction.user.rate %}
                            <i class="glyphicon glyphicon-star rate-success"></i>
                        {% endfor %}
                        {% for i in 1..5 - auction.user.rate %}
                            <i class="glyphicon glyphicon-star-empty"></i>
                        {% endfor %}
                    {% elseif auction.user.rate == 3 %}
                        {% for i in 1..auction.user.rate %}
                            <i class="glyphicon glyphicon-star rate-success"></i>
                        {% endfor %}
                        {% for i in 1..5 - auction.user.rate %}
                            <i class="glyphicon glyphicon-star-empty"></i>
                        {% endfor %}
                    {% elseif auction.user.rate == 4 %}
                        {% for i in 1..auction.user.rate %}
                            <i class="glyphicon glyphicon-star rate-success"></i>
                        {% endfor %}
                        <i class="glyphicon glyphicon-star-empty"></i>
                    {% elseif auction.user.rate == 5 %}
                        {% for i in 1..auction.user.rate %}
                            <i class="glyphicon glyphicon-star rate-success"></i>
                        {% endfor %}
                    {% endif %}
                </td>
                <td class="text-right bold">{{ auction.value|number_format(0, ' ', ' ') }} €</td>
                <td class="text-right">{{ auction.dateCreation|date('d/m/Y') }} à {{ auction.dateCreation|date('H:m:s') }}</td>
                    <td class="text-center">
                        {% if auction.state == 1 %}
                        <a href="{{ path('se_auction_auction_accept', {'auctionId': auction.id}) }}"
                           type="button" class="btn btn-primary" >
                            <i class="glyphicon glyphicon-thumbs-up" ></i>
                        </a>
                        {% elseif auction.state == 2%}
                        <a href="#"
                           type="button" class="btn btn-success" >
                            <i class="glyphicon glyphicon-ok" ></i>
                        </a>
                        
                        {% elseif auction.state == 3 %}
                        <a href="#"
                           type="button" class="btn btn-danger" >
                            <i class="glyphicon glyphicon-ok" ></i>
                        </a>
                        
                        {% endif %}
                    </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <div>Aucune enchère pour l'instant</div>
{% endif %}