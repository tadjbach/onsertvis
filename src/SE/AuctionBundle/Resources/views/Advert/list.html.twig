{% extends "SELayoutBundle::layout.html.twig" %}

{% block title %}
    Liste des demandes en cours - {{ parent() }}
{% endblock %}

{% block se_layout_body %}

        <h4 class="cat-title">Demandes en cours</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
        <div id="menu" class="col-md-12">
            filter
        </div>
    </div>
    <div class="row">
        <div id="content" class="col-md-12">
            {% for advert in listAdverts %}
                {{ include('@SEAuction/Advert/item.html.twig') }}
            {% else %}
                    <div>Pas (encore !) d'annonces</div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <ul class="pagination">
                <li>
                    <a href="#" aria-label="Précédent">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
                {% for p in range(1, nbPages) %}
                    <li{% if p == page %} class="active"{% endif %}>
                        <a href="{{ path('se_auction_advert_list', {'page': p}) }}">{{ p }}</a>
                    </li>
                {% endfor %}
                <li>
                    <a href="#" aria-label="Suivant">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

            
            
            
            
            
    </div>
</div>
{% endblock %}
