{% extends "SELayoutBundle::layout.html.twig" %}

{% block title %}
    Annonces par régions - {{ parent() }}
{% endblock %}

{% block se_layout_body %}
    <div class="row">
        <div id="content" class="col-md-12">
            <h4>
                {% for reg in regionLabelNormal %}
                    <a href="{{ path('se_auction_advert_list') }}">Toutes les Demandes</a>
             > {{ reg.labelNormal }}
                {% endfor %}
            </h4>
            {% for advert in listAdverts %}
                {{ include('@SEAuction/Advert/item.html.twig') }}
            {% else %}
                <div>Pas (encore !) d'annonces dans cette catégorie</div>
            {% endfor %}
        </div>
    </div>


    <hr>
{% endblock %}
